<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".status.status">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_cadastro_user"
        android:layout_width="403dp"
        android:layout_height="67dp"
        android:backgroundTint="#0E64D2"
        android:fontFamily="@font/archivo"
        android:text="Cadastrar OS"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/cardCancelado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCancelado"
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardTotal"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:orientation="vertical">

            <!-- Media -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="Cancelada"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/background_cancelado" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:orientation="horizontal"
                android:padding="5dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelada:"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAndamento"
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="Em andamento"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/background_em_andamento" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:orientation="horizontal"
                android:padding="5dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Em andamento:"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardConcluido"
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardAndamento"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Media -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="Concluida"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/background_concluido" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:orientation="horizontal"
                android:padding="5dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Concluido:"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTotal"
        android:layout_width="400dp"
        android:layout_height="140sp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardConcluido"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="Total"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/background_total" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:orientation="horizontal"
                android:padding="5dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>