<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".status.status">


    <TextView
        android:id="@+id/tvWaitingApproval2"
        android:layout_width="411dp"
        android:layout_height="302dp"
        android:background="#00BCD4"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvApproved"
        android:layout_width="372dp"
        android:layout_height="71dp"
        android:layout_marginBottom="52dp"
        android:background="#4CAF50"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvForwarded"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/tvInProgress"
        android:layout_width="372dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:background="#FFEB3B"
        android:text="10"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWaitingApproval" />

    <TextView
        android:id="@+id/tvForwarded"
        android:layout_width="372dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:background="#E91E63"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInProgress" />

    <TextView
        android:id="@+id/tvWaitingApproval"
        android:layout_width="372dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:background="#00BCD4"
        android:padding="10sp"
        android:text="0"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="372dp"
        android:layout_height="286dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/control_panel_rafiki"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btn_cadastro_user"
        android:layout_width="403dp"
        android:layout_height="67dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#0E64D2"
        android:fontFamily="@font/archivo"
        android:text="Cadastrar OS"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:text="Total"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="349dp" />

</androidx.constraintlayout.widget.ConstraintLayout>